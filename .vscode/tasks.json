{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "command": "go",
            "args": ["build", "main.go"],
            "problemMatcher": "$go",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install",
            "type": "process",
            "command": "go",
            "args": ["install"],
            "problemMatcher": "$go",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}